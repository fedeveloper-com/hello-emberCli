{{#if showName }}
    <h2>Hello {{ name }}</h2>
{{ else }}
    <h2>Hello World!</h2>
{{/if }}

<button {{ action 'toggleName' }}>Toggle Name</button>

<hr>

{{ numClicks }} increments <button {{ action 'incrementClick' }}>Increment</button>

{{outlet}}
